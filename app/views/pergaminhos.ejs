<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% acoes.forEach((el,i)=>{ %>
			
			<% 
				var txtAcao=''

				switch(el.acao){
					case '1': txtAcao=`alde${el.quantidade>1?`ôes`:`ão`} coletando recursos`;
						break
					case '2': txtAcao= `enforcamento${el.quantidade>1?`s`:null}programado${el.quantidade>1?`s`:null}`;
						break
					case '3': txtAcao = `alde${el.quantidade>1?`ôes`:`ão`} em treinamento de história`;
						break
					case '4': txtAcao = `alde${el.quantidade>1?`ôes`:`ão`} em treinamento de magia`;
						break
				}

				const date =new Date()
				const momentoAtual = date.getTime()
				const segundosRestantes=Math.round((el.terminaEm - momentoAtual) / 1000) 
			%>
			
			<li>
				<%= el.quantidade %> <%= txtAcao %>
				<small>
					restam <span class="tempo-restante"><%= segundosRestantes %></span>  segundos - 
					<a href="/revogar_acao?id_acao=<%= el._id %>">revogar ordem</a>
				</small>
			</li>
		<% }) %>
	</ul>
</div>